<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadChapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/chemistry_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="Chemistry" />

                <Button
                    android:id="@+id/physics_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="physics" />


                <Button
                    android:id="@+id/maths_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="maths" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/dpp_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="DPP" />

                <Button
                    android:id="@+id/pyqp_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="PREVIOUS YEAR " />


                <Button
                    android:id="@+id/biology_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="Biology" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/coachingNotes_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="Coaching Notes" />


                <Button
                    android:id="@+id/CBSE_chapterActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingLeft="12dp"
                    android:paddingTop="0dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="0dp"
                    android:text="CBSE" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Select Book "
                    android:textColor="#141414"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/bookSelect_chapterActivity"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Chapter Number"
            android:textColor="#141414"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/chapterNO_chapterActivity"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadSolutionSwitch"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:text="Upload Solution"/>

        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Chapter Name"
            android:textColor="#141414"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/chapterName_chapterActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/choosepdf_chapterActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorThemeHeader"
            android:text="choose PDF"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <Button
            android:id="@+id/uploadchapter_chapterActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorThemeHeader"
            android:text="upload"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>