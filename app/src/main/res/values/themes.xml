<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeetJeeFullPakage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f45b69</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f45b69</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NeetJeeFullPakage.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpactilToast">
        <item name="colorBackground">#03DAC5</item>
        <item name="textColor">#141414</item>
        <item name="textSize">14dp</item>
        <item name="iconLeft">@drawable/ic_baseline_arrow_downward_24</item>
        <item name="strokeColor">#141414</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="fullySpactilToast">
        <item name="colorBackground">#f45b69</item>
        <item name="textColor">#FFFFFF</item>
        <item name="textSize">14dp</item>
        <item name="iconLeft">@drawable/ic_baseline_done_all_24</item>
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="fullySpactilToast_HOMEACTIVITY">
        <item name="colorBackground">#f45b69</item>
        <item name="textColor">#FFFFFF</item>
        <item name="textSize">14dp</item>
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>